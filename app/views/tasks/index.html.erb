<div class="container">
  <div class="d-flex justify-content-between">
    <h1>Tasks</h1>
    <%= link_to "New task", tasks_new_path, class: "btn btn-primary"  %>
  </div>
  <div class="card-container d-flex">
    <div class="row">
      <% @tasks.each do |task| %>
        <div class="col-4">
          <div class="task-card border rounded p-3">
            <h3><%= link_to task.title, task_path(task) %></h3>
            <p><%= task.details %></p>
            <%= link_to "Delete", task_path(task), class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
           <%= link_to "Edit", edit_task_path(task), class: "btn btn-secondary"%>
           <%= link_to "#{task.btn_text}",  complete_task_path(task), class: "btn btn-#{task.btn_color}", method: :patch %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>
